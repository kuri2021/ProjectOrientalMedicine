<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="LoginViewModel"
            type="com.kuri2021.projectorientalmedicine.login.viewmodel.LoginViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.MainActivity">

        <ImageView
            android:id="@+id/LoginLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/main_logo"
            android:layout_above="@+id/LoginText"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"/>
        <TextView
            android:id="@+id/LoginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:layout_above="@+id/LoginRegion"
            android:textSize="40sp"
            android:layout_marginStart="40dp"/>

        <LinearLayout
            android:id="@+id/LoginRegion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp">

            <EditText
                android:id="@+id/InputIdEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints=""
                android:inputType="text"
                android:hint="아이디"
                android:background="@drawable/edit_focused_back"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                />
            <EditText
                android:id="@+id/InputPwEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints=""
                android:inputType="text"
                android:hint="비밀번호"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_focused_back"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/LoginLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/LoginRegion"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical">
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#33000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#33000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_below="@+id/LoginLine">
            <Button
                android:id="@+id/SingupBtn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <Button
                android:id="@+id/SingupBtn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <Button
                android:id="@+id/SingupBtn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <Button
                android:id="@+id/SingupBtn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>



    </RelativeLayout>

</layout>
